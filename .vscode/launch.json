    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/src/**/*.test.ts"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist-test/*"
            ],
        },
        {
            "name": "Debug app",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/index",
            "args": [
                "${workspaceRoot}/src/**/*.ts"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outFiles": [],
        }
    ]
}